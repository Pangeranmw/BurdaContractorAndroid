<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.deliveryorder.presentation.DeliveryOrderDetailActivity"
    android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:background="@color/white"
                android:contentDescription="@string/toggle_menu"
                android:src="@drawable/ic_back" />
            <TextView
                android:id="@+id/tv_app_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/inter_semi_bold"
                android:text="@string/detail_delivery_order"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/sr_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:orientation="vertical"
                    android:background="@drawable/bottom_outline_gray"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        >
                        <ImageButton
                            android:id="@+id/btn_download"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:contentDescription="@string/cd_button"
                            android:src="@drawable/ic_download"
                            android:background="@drawable/semi_rounded_outline_main"
                            />
                        <ImageButton
                            android:visibility="gone"
                            android:contentDescription="@string/cd_button"
                            android:id="@+id/btn_delete"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_trash"
                            android:background="@drawable/semi_rounded_outline_main"
                            android:layout_marginStart="10dp"
                            />
                        <TextView
                            android:id="@+id/tv_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/status"
                            android:fontFamily="@font/inter_medium"
                            android:textColor="@color/red_light"
                            android:gravity="end"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_delivery_order"
                            app:tint="@color/black"
                            android:contentDescription="@string/cd_button"
                            android:layout_marginEnd="10dp"
                            />
                        <TextView
                            android:id="@+id/tv_kode_do"
                            android:textIsSelectable="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/kode_do"
                            android:fontFamily="@font/inter_bold"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:baselineAligned="false"
                        >
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/tanggal_dibuat"
                                android:fontFamily="@font/inter_semi_bold"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_created_at"
                                android:text="@string/dummy_date"
                                android:fontFamily="@font/inter_medium"
                                android:textColor="@color/black"
                                android:layout_marginTop="2dp"
                                android:textSize="12sp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/terakhir_diperbarui"
                                android:fontFamily="@font/inter_semi_bold"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_updated_at"
                                android:text="@string/dummy_date"
                                android:fontFamily="@font/inter_medium"
                                android:textColor="@color/black"
                                android:layout_marginTop="2dp"
                                android:textSize="12sp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/layout_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    app:flexWrap="wrap"
                    app:justifyContent="space_between"
                    android:background="@drawable/bottom_outline_gray"
                    >
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_ambil_barang"
                        android:layout_width="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content"
                        android:text="@string/ambil_barang"
                        android:background="@drawable/semi_rounded_primary"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:fontFamily="@font/inter_bold"
                        android:visibility="gone"
                        app:layout_flexGrow="1"
                        />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_upload_foto_bukti"
                        android:layout_width="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content"
                        android:text="@string/upload_foto_bukti"
                        android:background="@drawable/semi_rounded_primary"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:fontFamily="@font/inter_bold"
                        android:visibility="gone"
                        app:layout_flexGrow="1"
                        />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_ubah_do"
                        android:layout_width="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content"
                        android:text="@string/ubah_delivery_order"
                        android:background="@drawable/semi_rounded_primary"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:fontFamily="@font/inter_bold"
                        android:visibility="gone"
                        app:layout_flexGrow="1"
                        />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_pantau_lokasi"
                        android:layout_width="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content"
                        android:text="@string/pantau_lokasi"
                        android:background="@drawable/semi_rounded_outline_main"
                        android:textColor="@color/primary_main"
                        android:fontFamily="@font/inter_bold"
                        android:textAllCaps="false"
                        app:layout_flexGrow="1"
                        />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_telusuri_lokasi"
                        android:layout_width="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content"
                        android:text="@string/telusuri_rute_lokasi"
                        android:background="@drawable/semi_rounded_outline_main"
                        android:textColor="@color/primary_main"
                        android:fontFamily="@font/inter_bold"
                        android:textAllCaps="false"
                        android:visibility="gone"
                        app:layout_flexGrow="1"
                        />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_tandai_selesai"
                        android:layout_width="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content"
                        android:text="@string/tandai_selesai"
                        android:background="@drawable/semi_rounded_primary"
                        android:textColor="@color/white"
                        android:fontFamily="@font/inter_bold"
                        android:textAllCaps="false"
                        android:visibility="gone"
                        app:layout_flexGrow="1"
                        />
                </com.google.android.flexbox.FlexboxLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    android:orientation="vertical"
                    android:background="@drawable/bottom_outline_gray"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/asal_dan_tujuan"
                        android:textSize="14sp"
                        android:fontFamily="@font/inter_semi_bold"
                        android:textColor="@color/black"
                        />
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        >
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_asal"
                            android:contentDescription="@string/cd_icon"
                            />
                        <TextView
                            android:id="@+id/tv_nama_asal"
                            android:layout_marginStart="5dp"
                            android:textColor="@color/black"
                            android:text="@string/nama_asal"
                            android:fontFamily="@font/inter_medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_alamat_asal"
                        android:textColor="@color/black"
                        android:text="@string/alamat_asal"
                        android:fontFamily="@font/inter_light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp"
                        />
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        >
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_tujuan"
                            android:contentDescription="@string/cd_icon"
                            />
                        <TextView
                            android:id="@+id/tv_nama_tujuan"
                            android:layout_marginStart="5dp"
                            android:textColor="@color/black"
                            android:text="@string/nama_tujuan"
                            android:fontFamily="@font/inter_medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_alamat_tujuan"
                        android:textColor="@color/black"
                        android:text="@string/alamat_tujuan"
                        android:fontFamily="@font/inter_light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    android:background="@drawable/bottom_outline_gray"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:baselineAligned="false"
                    >
                    <LinearLayout
                        android:id="@+id/layout_tgl_pengambilan"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="@string/tanggal_pengambilan"
                            android:fontFamily="@font/inter_semi_bold"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            />
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:id="@+id/tv_tgl_pengambilan"
                            android:text="@string/dummy_date"
                            android:fontFamily="@font/inter_medium"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:textSize="12sp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_purchasing"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="@string/pemohon"
                            android:fontFamily="@font/inter_semi_bold"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            >
                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/iv_purchasing"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:scaleType="centerCrop"
                                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Small"
                                android:src="@drawable/unit_purchasing"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_toEndOf="@+id/iv_purchasing"
                                android:layout_marginStart="5dp"
                                >
                                <TextView
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:id="@+id/tv_nama_purchasing"
                                    android:text="@string/nama_user"
                                    android:fontFamily="@font/inter_medium"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    />
                                <TextView
                                    android:id="@+id/tv_no_hp_purchasing"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:text="@string/purchasing"
                                    android:fontFamily="@font/inter_light"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    />
                            </LinearLayout>
                        </RelativeLayout>
                        <LinearLayout
                            android:id="@+id/layout_hubungi_purchasing"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatImageButton
                                android:id="@+id/btn_hubungi_purchasing"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/semi_rounded_outline_main"
                                android:src="@drawable/ic_tel"
                                android:contentDescription="@string/cd_button"
                                android:padding="10dp"
                                android:layout_marginTop="5dp"
                                app:tint="@color/primary_main"
                                android:layout_marginEnd="10dp"
                                />
                            <androidx.appcompat.widget.AppCompatImageButton
                                android:id="@+id/btn_wa_purchasing"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:contentDescription="@string/cd_button"
                                android:background="@drawable/semi_rounded_outline_main"
                                android:src="@drawable/ic_whatsapp"
                                android:padding="10dp"
                                android:layout_marginTop="5dp"
                                app:tint="@color/primary_main"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:background="@drawable/bottom_outline_gray"
                    android:baselineAligned="false"
                    >
                    <LinearLayout
                        android:id="@+id/layout_perihal"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="@string/perihal"
                            android:fontFamily="@font/inter_semi_bold"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            />
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:id="@+id/tv_perihal"
                            android:text="@string/perihal"
                            android:fontFamily="@font/inter_medium"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:textSize="12sp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_untuk_perhatian"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="@string/untuk_perhatian"
                            android:fontFamily="@font/inter_semi_bold"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            />
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:id="@+id/tv_untuk_perhatian"
                            android:text="@string/untuk_perhatian"
                            android:fontFamily="@font/inter_medium"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:textSize="12sp"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_kendaraan_driver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:baselineAligned="false"
                    android:background="@drawable/bottom_outline_gray"
                    >
                    <LinearLayout
                        android:id="@+id/layout_kendaraan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="@string/kendaraan"
                            android:fontFamily="@font/inter_semi_bold"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            >
                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/iv_kendaraan"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:scaleType="centerCrop"
                                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Small"
                                android:src="@drawable/vehicle_car"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_toEndOf="@+id/iv_kendaraan"
                                android:layout_marginStart="5dp"
                                >
                                <TextView
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:id="@+id/tv_merk_kendaraan"
                                    android:text="@string/kendaraan"
                                    android:fontFamily="@font/inter_medium"
                                    android:layout_marginEnd="10dp"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    />
                                <TextView
                                    android:id="@+id/tv_plat_kendaraan"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:text="@string/kendaraan"
                                    android:fontFamily="@font/inter_light"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    />
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_driver"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="@string/driver"
                            android:fontFamily="@font/inter_semi_bold"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            >
                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/iv_driver"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:scaleType="centerCrop"
                                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Small"
                                android:src="@drawable/unit_driver"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_toEndOf="@+id/iv_driver"
                                android:layout_marginStart="5dp"
                                >
                                <TextView
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:id="@+id/tv_nama_driver"
                                    android:text="@string/nama_user"
                                    android:fontFamily="@font/inter_medium"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    />
                                <TextView
                                    android:id="@+id/tv_no_hp_driver"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:text="@string/driver"
                                    android:fontFamily="@font/inter_light"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    />
                            </LinearLayout>
                        </RelativeLayout>
                        <LinearLayout
                            android:id="@+id/layout_hubungi_driver"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatImageButton
                                android:id="@+id/btn_hubungi_driver"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/semi_rounded_outline_main"
                                android:src="@drawable/ic_tel"
                                android:contentDescription="@string/cd_button"
                                android:padding="10dp"
                                android:layout_marginTop="5dp"
                                app:tint="@color/primary_main"
                                android:layout_marginEnd="10dp"
                                />
                            <androidx.appcompat.widget.AppCompatImageButton
                                android:id="@+id/btn_wa_driver"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/semi_rounded_outline_main"
                                android:src="@drawable/ic_whatsapp"
                                android:contentDescription="@string/cd_button"
                                android:padding="10dp"
                                android:layout_marginTop="5dp"
                                app:tint="@color/primary_main"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_penanda_selesai_dan_foto_bukti"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:weightSum="2"
                    android:paddingVertical="10dp"
                    android:orientation="horizontal"
                    android:background="@drawable/bottom_outline_gray"
                    android:baselineAligned="false"
                    >
                    <LinearLayout
                        android:id="@+id/layout_foto_bukti"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/foto_bukti"
                            android:textSize="14sp"
                            android:fontFamily="@font/inter_semi_bold"
                            android:textColor="@color/black"
                            />
                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/iv_foto_bukti"
                            android:layout_width="wrap_content"
                            android:layout_height="200dp"
                            android:layout_marginTop="5dp"
                            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Small"
                            android:scaleType="fitStart"
                            android:layout_gravity="start"
                            tools:src="@tools:sample/avatars" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_penanda_selesai"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="@string/penanda_selesai"
                            android:fontFamily="@font/inter_semi_bold"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            >
                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/iv_admin_gudang"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:scaleType="centerCrop"
                                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Small"
                                android:src="@drawable/unit_admin_gudang"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_toEndOf="@+id/iv_admin_gudang"
                                android:layout_marginStart="5dp"
                                >
                                <TextView
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:id="@+id/tv_nama_admin_gudang"
                                    android:text="@string/nama_user"
                                    android:fontFamily="@font/inter_medium"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    />
                                <TextView
                                    android:id="@+id/tv_no_hp_admin_gudang"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:text="@string/admin_gudang"
                                    android:fontFamily="@font/inter_light"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    />
                            </LinearLayout>
                        </RelativeLayout>
                        <LinearLayout
                            android:id="@+id/layout_hubungi_admin_gudang"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatImageButton
                                android:id="@+id/btn_hubungi_admin_gudang"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/semi_rounded_outline_main"
                                android:src="@drawable/ic_tel"
                                android:padding="10dp"
                                android:contentDescription="@string/cd_button"
                                android:layout_marginTop="5dp"
                                app:tint="@color/primary_main"
                                android:layout_marginEnd="10dp"
                                />
                            <androidx.appcompat.widget.AppCompatImageButton
                                android:id="@+id/btn_wa_admin_gudang"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:contentDescription="@string/cd_button"
                                android:background="@drawable/semi_rounded_outline_main"
                                android:src="@drawable/ic_whatsapp"
                                android:padding="10dp"
                                android:layout_marginTop="5dp"
                                app:tint="@color/primary_main"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    android:orientation="vertical"
                    android:background="@drawable/bottom_outline_gray"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/daftar_pre_order"
                        android:textSize="14sp"
                        android:fontFamily="@font/inter_semi_bold"
                        android:textColor="@color/black"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_pre_order"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:spanCount="2"
                            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                            tools:itemCount="4"
                            tools:listitem="@layout/item_pre_order" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_ttd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    android:orientation="vertical"
                    android:background="@drawable/bottom_outline_gray"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hormat_kami_pt_burda_contraco"
                        android:textSize="14sp"
                        android:fontFamily="@font/inter_semi_bold"
                        android:textColor="@color/black"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/ttd_background"
                        android:padding="20dp"
                        >
                        <ImageView
                            android:id="@+id/iv_ttd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/cd_icon"
                            android:layout_centerInParent="true" />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/tv_tertanda_pemohon"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/tertanda_pemohon"
                        android:textSize="14sp"
                        android:fontFamily="@font/inter_medium"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:id="@+id/tv_role_tertanda_pemohon"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/purchasing"
                        android:textSize="12sp"
                        android:fontFamily="@font/inter_regular"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>