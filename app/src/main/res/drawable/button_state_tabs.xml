<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/semi_rounded_outline_secondary_main" android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@drawable/semi_rounded_outline_secondary_main" />
        </shape>
    </item>
    <item android:drawable="@drawable/semi_rounded_outline_gray" android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@drawable/semi_rounded_outline_gray" />
        </shape>
    </item>
    <!-- default state-->
    <item android:drawable="@drawable/semi_rounded_secondary_main" android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="@drawable/semi_rounded_secondary_main" />
            <corners android:radius="500dp" />
        </shape>
    </item>
</selector>