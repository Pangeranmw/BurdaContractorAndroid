<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/semi_rounded_outline_main" android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@drawable/semi_rounded_outline_main"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item android:drawable="@drawable/semi_rounded_secondary_main" android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@drawable/semi_rounded_secondary_main"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <!-- default state-->
    <item android:drawable="@drawable/semi_rounded_outline_main">
        <shape android:shape="rectangle">
            <solid android:color="@drawable/semi_rounded_outline_main"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
</selector>