<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/semi_rounded_primary" android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@drawable/semi_rounded_primary"/>
        </shape>
    </item>
    <item android:drawable="@drawable/semi_rounded_gray_dark" android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@drawable/semi_rounded_gray_dark"/>
        </shape>
    </item>
    <!-- default state-->
    <item android:drawable="@drawable/semi_rounded_primary">
        <shape android:shape="rectangle">
            <solid android:color="@drawable/semi_rounded_primary"/>
            <corners android:radius="500dp"/>
        </shape>
    </item>
</selector>