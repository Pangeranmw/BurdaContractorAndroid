<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingVertical="10dp"
    android:paddingHorizontal="15dp"
    style="@style/RoundedBackgroundBottomSheetDialog"
    tools:context=".feature.perusahaan.presentation.FilterPerusahaanFragment">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:id="@+id/drag_handle"
        android:layout_gravity="center_horizontal"
        android:layout_width="50dp"
        android:layout_height="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/semi_rounded_gray_light"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_date_range_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/filter_provinsi"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:alignItems="center"
                app:flexWrap="wrap">

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_flexGrow="1"
                    app:flexDirection="column"
                    android:layout_marginBottom="190dp">

                    <com.skydoves.powerspinner.PowerSpinnerView
                        android:id="@+id/spinner_provinsi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:hint="@string/provinsi_belum_diatur"
                        android:textColorHint="@color/gray"
                        app:spinner_arrow_tint="@color/black"
                        app:fontFamily="@font/inter_medium"
                        android:drawableTint="@color/secondary_main"
                        app:spinner_selected_item_background="@drawable/semi_rounded_gray_light"
                        app:spinner_popup_background="@drawable/semi_rounded_outline_secondary_main"
                        android:background="@drawable/semi_rounded_outline_secondary_main" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_reset_provinsi"
                        android:layout_width="match_parent"
                        android:paddingHorizontal="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_trash"
                        android:drawableTint="@color/red"
                        android:text="@string/reset_provinsi"
                        android:background="@drawable/semi_rounded_outline_red"
                        android:textColor="@color/red"
                        android:textAllCaps="false"
                        android:fontFamily="@font/inter_bold"
                        app:layout_flexGrow="1"
                        android:visibility="gone" />
                </com.google.android.flexbox.FlexboxLayout>
            </com.google.android.flexbox.FlexboxLayout>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_atur"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:drawableTint="@color/secondary_main"
            android:text="@string/terapkan_filter"
            android:background="@drawable/semi_rounded_primary"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:fontFamily="@font/inter_bold"
            app:layout_flexGrow="1" />
    </LinearLayout>
</FrameLayout>